{
    "identifier": "graypegg.TextTransforms",
    "name": "Text Transforms",
    "organization": "Gray Pegg",
    "description": "Some basic text transformations for use in the Nova editor command palette.",
    "repository": "https://github.com/graypegg/nova-text-transforms",
    "version": "1.0",
    "categories": ["commands"],
    
    "main": "main.js",

    "entitlements": {
        
    },
    
    "commands": {
        "extensions": [
            {
                "title": "Transform to SNAKE_CASE",
                "command": "texttransforms.snakecase"
            },
            {
                "title": "Transform to lowercase",
                "command": "texttransforms.lowercase"
            },
            {
                "title": "Transform to UPPERCASE",
                "command": "texttransforms.uppercase"
            },
            {
                "title": "Transform to camelCase",
                "command": "texttransforms.camelcase"
            }
        ]
    }
}
